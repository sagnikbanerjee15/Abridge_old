
CPU=40

Abdrige Compression
===================
(/usr/bin/time --verbose  \
abridge \
--compress \
--cpu $CPU \
--keep_intermediate_error_files \
--both \
--save_all_quality_scores \
--genome /90daydata/maizegdb/sagnik/data/ARATH/genome/Arabidopsis_thaliana.TAIR10.dna_sm.toplevel.fa  \
--inputsamfilenames /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711353_SE.sam /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711354_SE.sam /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711355_SE.sam /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711356_SE.sam /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711357_SE.sam \
--output_directory /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge) \
1> /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/tests_compress.output \
2> /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/tests_compress.error &

(/usr/bin/time --verbose  \
abridge \
--keep_intermediate_error_files \
--compress \
--cpu $CPU \
--both \
--save_all_quality_scores \
--genome /90daydata/maizegdb/sagnik/data/ARATH/genome/Arabidopsis_thaliana.TAIR10.dna_sm.toplevel.fa  \
--inputsamfilenames /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711355_SE.sam \
--output_directory /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge) \
1> /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/tests_compress.output \
2> /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/tests_compress.error &


Abridge Decompression
=====================
(/usr/bin/time --verbose  \
abridge \
--decompress \
--cpu $CPU \
--genome /90daydata/maizegdb/sagnik/data/ARATH/genome/Arabidopsis_thaliana.TAIR10.dna_sm.toplevel.fa  \
--inputabrfilenames /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711353_SE.sam.abridge.br /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711354_SE.sam.abridge.br /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711355_SE.sam.abridge.br /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711356_SE.sam.abridge.br /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711357_SE.sam.abridge.br \
--output_directory /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/decompress) \
1> /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/tests_decompress.output \
2> /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/tests_decompress.error &

(/usr/bin/time --verbose  \
abridge \
--decompress \
--cpu $CPU \
--keep_intermediate_error_files \
--genome /90daydata/maizegdb/sagnik/data/ARATH/genome/Arabidopsis_thaliana.TAIR10.dna_sm.toplevel.fa  \
--inputabrfilenames /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711355_SE.sam.abridge.br \
--output_directory /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/decompress) \
1> /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/tests_decompress.output \
2> /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/tests_decompress.error &


Abridge Merge
=============
(/usr/bin/time --verbose  \
abridge \
--merge \
--cpu $CPU \
--genome /90daydata/maizegdb/sagnik/data/ARATH/genome/Arabidopsis_thaliana.TAIR10.dna_sm.toplevel.fa  \
--inputabrfilenames /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711355_SE.sam.abridge.7z /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711354_SE.sam.abridge.7z /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711355_SE.sam.abridge.7z \
-o /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/merge) \
1> /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/tests_merge.output \
2> /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/tests_merge.error &

Abridge random access
=====================

(/usr/bin/time --verbose  \
abridge \
--random \
--inputabrfilenames /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/SRR13711355_SE.sam.abridge.7z \
--positions 1:5000-7000 \
--genome /90daydata/maizegdb/sagnik/data/ARATH/genome/Arabidopsis_thaliana.TAIR10.dna_sm.toplevel.fa  \
--output_directory /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/decompress \
) \
1> /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/tests_random.output \
2> /90daydata/maizegdb/sagnik/ABRIDGE/developing_abridge/tests_random.error &


Abridge paired ended
====================
ROOT_DIRECTORY=/90daydata/maizegdb/sagnik/ABRIDGE/
ROOT_DIRECTORY=/project/maizegdb/sagnik/ABRIDGE/

(/usr/bin/time --verbose  \
abridge \
--keep_intermediate_error_files \
--compress \
--cpu $CPU \
--both \
--save_all_quality_scores \
--genome /90daydata/maizegdb/sagnik/data/ARATH/genome/Arabidopsis_thaliana.TAIR10.dna_sm.toplevel.fa  \
--inputsamfilenames $ROOT_DIRECTORY/developing_abridge/SRR13711355_PE.sam \
--output_directory $ROOT_DIRECTORY/developing_abridge) \
1> $ROOT_DIRECTORY/developing_abridge/tests_compress.output \
2> $ROOT_DIRECTORY/developing_abridge/tests_compress.error &



gcc src/modifyReadNamesPairedEnded.c -o src/modifyReadNamesPairedEnded -Ofast
gcc src/separateReadsMatePairTogetherAndMatePairAway.c -o src/separateReadsMatePairTogetherAndMatePairAway -Ofast
(/usr/bin/time --verbose  \
$ROOT_DIRECTORY/Abridge/src/modifyReadNamesPairedEnded  \
$ROOT_DIRECTORY/developing_abridge/SRR13711355_PE.sam \
$ROOT_DIRECTORY/developing_abridge/SRR13711355_PE_names_modified.sam \
) \
1> $ROOT_DIRECTORY/developing_abridge/SRR13711355_PE_names_modified.output \
2> $ROOT_DIRECTORY/developing_abridge/SRR13711355_PE_names_modified.error

(/usr/bin/time --verbose  \
/project/maizegdb/sagnik/ABRIDGE/Abridge/src/separateReadsMatePairTogetherAndMatePairAway  \
/project/maizegdb/sagnik/ABRIDGE//developing_abridge/SRR13711355_PE.sam  \
/project/maizegdb/sagnik/ABRIDGE//developing_abridge/SRR13711355_PE.sam_mate_pairs_already_next_to_each_other.sam  \
/project/maizegdb/sagnik/ABRIDGE//developing_abridge/SRR13711355_PE.sam_mate_pairs_away_from_to_each_other.sam \
) \
1> /project/maizegdb/sagnik/ABRIDGE//developing_abridge/SRR13711355_PE.sam_separateReadsMatePairTogetherAndMatePairAway.output \
2> /project/maizegdb/sagnik/ABRIDGE//developing_abridge/SRR13711355_PE.sam_separateReadsMatePairTogetherAndMatePairAway.error

